<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.toolbox.follow.auto.adam.autofollowtoolbox.MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upArrow"
        android:src="@drawable/uparrow"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leftArrow"
        android:src="@drawable/leftarrow"
        android:background="@null"
        android:layout_alignBottom="@+id/downArrow"
        android:layout_toLeftOf="@+id/upArrow"
        android:layout_toStartOf="@+id/upArrow"
        android:layout_marginBottom="70dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightArrow"
        android:src="@drawable/rightarrow"
        android:background="@null"
        android:layout_alignTop="@+id/leftArrow"
        android:layout_toRightOf="@+id/upArrow"
        android:layout_toEndOf="@+id/upArrow" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/downArrow"
        android:src="@drawable/downarrow"
        android:background="@null"
        android:layout_below="@+id/upArrow"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoFollowSwitch"
        android:checked="true"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Auto Follow"
        android:id="@+id/textView"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/downArrow"
        android:layout_alignLeft="@+id/downArrow"
        android:layout_alignStart="@+id/downArrow" />
</RelativeLayout>
